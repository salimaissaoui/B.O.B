{
  "$schema": "./bob.config.schema.json",
  "_comment": "B.O.B Configuration File - Customize build limits and performance settings",
  "limits": {
    "maxWidth": 2000,
    "maxDepth": 2000,
    "maxHeight": 320,
    "maxBlocks": 5000000,
    "maxSteps": 5000,
    "maxUniqueBlocks": 50,
    "infiniteMode": true
  },
  "performance": {
    "buildRateLimit": 200,
    "chatCommandMinDelayMs": 100,
    "pixelArtBatching": true,
    "stationBasedMovement": true
  },
  "worldedit": {
    "enabled": true,
    "maxSelectionVolume": 500000,
    "maxSelectionDimension": 250,
    "commandRateLimit": 10,
    "commandMinDelayMs": 350,
    "maxCommandsPerBuild": 500,
    "fallbackOnError": true
  },
  "validation": {
    "minQualityScore": 0.7,
    "requireFeatureCompletion": true,
    "allowPartialBuilds": false
  },
  "llm": {
    "timeoutMs": 120000,
    "maxRetries": 5,
    "retryDelayMs": 1000,
    "maxOutputTokens": 8192
  }
}